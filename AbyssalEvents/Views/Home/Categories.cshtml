@model List<Abyssal_Events.Models.Domain.Category>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Categories</h1>
    </div>
</div>

<div class="container mt-2 mb-2 justify-content-center">
    <div class="row">
        <div class="col-6">
            @if (Model is not null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <a class="btn btn-dark me-2" asp-area=""
                            asp-controller="Events"
                            asp-action="Filter"
                            asp-route-categoryId="@category.Id">
                        @category.Name
                    </a>
                }
            }
            else
            {
                <p>No categories found</p>
            }
        </div>
    </div>
</div>