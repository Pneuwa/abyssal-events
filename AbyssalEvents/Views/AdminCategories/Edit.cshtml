@model Abyssal_Events.Models.ViewModel.EditCategoryRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Edit Category</h1>
	</div>
</div>

<div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="name" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" required />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark me-1">Update</button>
                    <button type="submit" class="btn btn-danger"
                            asp-area=""
                            asp-controller="AdminCategories"
                            asp-action="Delete">
                        Delete
                    </button>
                </div>
            </div>
        </form>
</div>