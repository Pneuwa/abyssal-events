@model List<Abyssal_Events.Models.Domain.Category>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Manage Categories</h1>
	</div>
</div>

<div class="container py-5">
	@if (Model is not null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td>@category.Id</td>
						<td>@category.Name</td>
						<td>
							<a class="border p-1" style="text-decoration:none; color:black" asp-area="" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No categories found</p>
	}
</div>